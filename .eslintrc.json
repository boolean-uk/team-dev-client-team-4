{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "semi": "off",
    "no-extra-semi": "off",
    "no-unused-expressions": "warn",
    "no-unused-vars": "warn",
    "no-unused-labels": "warn",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
